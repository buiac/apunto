<% if (contacts.length) { %>
  <ul class="list list-unstyled">

    <% for(var i = 0; i < contacts.length; i++) {%>
      
      <li class="drag-item" data-duration="01:00" data-event='{"title": "<%= contacts[i].title %>", "number": "<%= contacts[i].number %>"}'><%= contacts[i].title %> <a href="/api/1/contacts/<%= calendarId %>/delete/<%= contacts[i]._id %>" class="pull-right btn-confirm delete-contact"><i class="fa fa-trash"></i></a>
        <div>
          <span class="text-muted"><%= contacts[i].number %></span>
        </div>
        <div class="clear"></div>
      </li>

    <% } %>

  </ul>
<% } else { %>

  <div class="alert alert-info">
    <p>You have no contacts yet.</p>
  </div>

<% } %>
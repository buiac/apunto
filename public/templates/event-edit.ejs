<form action="" class="create-update" id="<%= modal.idName %>">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel"><%= modal.title %></h4>
  </div>
  <div class="modal-body">
   
      <label for="" class="control-label">Client Name</label>
      <input type="text" name="name" id="" class="form-control" value="<%= event.title %>" required>

      <label for="" class="control-label">Number</label>
      <input type="text" name="number" id="" class="form-control" value="<%= event.number %>" required>

      <label for="" class="control-label">Type</label>
      
      <label for="" class="checkbox">
        <input type="checkbox" name="call" id="" value="true">
        Call
      </label>

      <label for="" class="checkbox">
        <input type="checkbox" name="sms" id="" value="true">
        SMS
      </label>

      <label for="" class="checkbox">
        <input type="checkbox" name="email" id="" value="true">
        Email
      </label>

      <input type="hidden" name="_id" value="<%= event._id %>">
      <input type="hidden" name="start" value="<%= event.start %>">
      <input type="hidden" name="end" value="<%= event.end %>">
      
    
  </div>
  

</form>
<form action="" class="create-update" id="<%= modal.idName %>">
  <div class="modal-header">
    
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      
      <span aria-hidden="true">&times;</span>

    </button>
    
    <h4 class="modal-title" id="myModalLabel"><%= modal.title %></h4>

  </div>

  <div class="modal-body">
    <div class="alert alert-danger">
      <p>Something is not right</p>
    </div>

    <div class="form-group">
      
      <label for="" class="control-label">Client Name</label>
      
      <input type="text" name="name" id="" class="form-control" value="<%= contact.title %>" required>

    </div>

    <div class="form-group">
      
      <label for="" class="control-label">Client Email (optional)</label>
      
      <input type="text" name="email" id="" class="form-control" value="<%= contact.email || '' %>">

    </div>
    
    <div class="form-group">
      
      <label for="" class="control-label">Client Phone Number </label>
      
      <input type="tel" name="number" id="" class="form-control mobile-number" value="<%= contact.number %>" required>

    </div>

    <input type="hidden" name="contactId" value="<%= contact.contactId || '' %>">

  </div>
  
  <div class="modal-footer">
    
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

    <button type="submit" class="btn btn-primary create">Add new contact</button>
    
    <button type="submit" class="btn btn-primary update">Update contact</button>

  </div>

</form>
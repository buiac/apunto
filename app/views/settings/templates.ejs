  <script src="/bower_components/ejs/ejs.js"></script>

  <link href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/bower_components/fontawesome/css/font-awesome.min.css">
  <link rel="stylesheet" href="/bower_components/fullcalendar/dist/fullcalendar.css">
  
  <link rel="stylesheet" href="/style/app.css">
  <script src="/scripts/app.js"></script>
</head>
<body>

  <nav class="navbar navbar-inverse navbar-static-top">
    
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          
          <div class="navbar-header">
            
            <a href="/dashboard" class="navbar-brand">
              <span class="logo"></span>
            </a>

          </div> <!-- navbar-header -->

          <div class="dropdown pull-right">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
              <%= user.username %>
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
              <li role="presentation"><a role="menuitem" tabindex="-1" href="/settings/account"><i class="fa fa-cog"></i> Settings</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="/signout"> <i class="fa fa-power-off"></i> Log out</a></li>
            </ul>
          </div>

        </div> <!-- col -->

      </div> <!-- row -->

    </div> <!-- container-fluid -->

  </nav>

  <div class="container">
    <div class="col-md-4">

    </div>
    <div class="col-md-8">
      <h2>Templates</h2>
      
      <div class="row">
        <div class="col-md-4">
          <ul class="list-unstyled template-list">
            <% templates.forEach(function(template){ %>
              <li data-name="<%= template.name %>" data-message="<%= template.message %>" data-id="<%= template._id %>">
                <a href=""><%= template.name %></a>
              </li>

            <% }) %>
          </ul>
        </div>
        <div class="col-md-8">
          <form action="/settings/templates" method="post" class="template-edit">
            
            <div class="form-group">
              <label for="">Template Name</label>
              <input type="text" name="name" id="" class="form-control" required>
            </div>

            <div class="form-group">
              <label for="">Template Message</label>
              <textarea required name="message" id="" cols="10" rows="3" class="form-control">Notification: you have an appointment starting at {time} with {full_name} from {company_name}.</textarea>
            </div>

            <input type="hidden" value="<%= user._id %>" name="userId">
            <input type="hidden" value="" name="templateId">

            <button type="submit" class="btn btn-primary">Save Template</button>

          </form>
        </div>
      </div>
    </div>
  </div>

